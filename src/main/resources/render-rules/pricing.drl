    	BestVendorFundingCampaign($cId: campaignDiscount.campaignDiscount.campaignId, $lowestSP : campaignDiscount.campaignDiscount.sp, $arq: campaignDiscount.campaignDiscount.availableRedemptionQuantity,  
    	(campaignDiscount.campaignDiscount.discountTier == JavelinConstants.ADDON && campaignDiscount.campaignDiscount.availableRedemptionQuantity > 0));
        not BestVendorFundingCampaign(campaignDiscount.campaignDiscount.campaignId < $cId, 
        (campaignDiscount.campaignDiscount.discountTier == JavelinConstants.ADDON && campaignDiscount.campaignDiscount.availableRedemptionQuantity > 0));
    then
        //System.out.println("Best sp: "+ $lowestRSP +" ID: "+ $cId +" Category: "+ JavelinConstants.REGULAR +" Best: "+ javelinPrice.getSp());
        if($lowestSP < javelinPrice.getSp() || javelinPrice.getSp() == 0) {
        	javelinPrice.setSp($lowestSP);	
        	netAvailableRedemptionQuantity = netAvailableRedemptionQuantity > $arq ? $arq : netAvailableRedemptionQuantity;
        	javelinPrice.setNarq(netAvailableRedemptionQuantity);
        	campaigns.add($cId);
        }
end

